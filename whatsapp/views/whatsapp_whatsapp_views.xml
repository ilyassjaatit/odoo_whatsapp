<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
    <record id="whatsapp_twhatsapp_view_form" model="ir.ui.view">
        <field name="name">whatsapp.whatsapp.view.form</field>
        <field name="model">whatsapp.whatsapp</field>
        <field name="arch" type="xml">
            <form string="Whatsapp">
                <header>
                    <button name="send" string="Send Now" type="object" states='outgoing' class="oe_highlight"/>
                    <button name="action_set_outgoing" string="Retry" type="object" states='error,canceled'/>
                    <button name="action_set_canceled" string="Cancel" type="object" states='error,outgoing'/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" string="Contact"/>
                            <field name="mail_message_id" readonly="1" attrs="{'invisible': [('mail_message_id', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="number" required="1"/>
                            <field name="failure_type" readonly="1" attrs="{'invisible': [('failure_type', '=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="body" widget="whatsapp_widget" string="Message" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="whatsapp_whatsapp_view_tree" model="ir.ui.view">
        <field name="name">whatsapp.whatsapp.view.tree</field>
        <field name="model">whatsapp.whatsapp</field>
        <field name="arch" type="xml">
            <tree string="Whatsapp Templates">
                <field name="number"/>
                <field name="partner_id"/>
                <field name="failure_type"/>
                <field name="state" widget="badge" decoration-info="state == 'outgoing'" decoration-muted="state == 'canceled'" decoration-success="state == 'sent'" decoration-danger="state == 'error'"/>
                <button name="send" string="Send Now" type="object" icon="fa-paper-plane" states="outgoing"/>
                <button name="action_set_outgoing" string="Retry" type="object" icon="fa-repeat" states="error,canceled"/>
                <button name="action_set_canceled" string="Cancel" type="object" icon="fa-times-circle" states="error,outgoing"/>
            </tree>
        </field>
    </record>

    <record id="whatsapp_whatsapp_view_search" model="ir.ui.view">
        <field name="name">whatsapp.whatsapp.view.search</field>
        <field name="model">whatsapp.whatsapp</field>
        <field name="arch" type="xml">
            <search string="Search Whatsapp Templates">
                <field name="number"/>
                <field name="partner_id"/>
            </search>
        </field>
    </record>

    <record id="whatsapp_whatsapp_action" model="ir.actions.act_window">
        <field name="name">Whatsapp</field>
        <field name="res_model">whatsapp.whatsapp</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="whatsapp_whatsapp_menu"
        parent="phone_validation.phone_menu_main"
        action="whatsapp_whatsapp_action"
        sequence="1"/>

    <record id="ir_actions_server_whatsapp_whatsapp_resend" model="ir.actions.server">
        <field name="name">Resend</field>
        <field name="model_id" ref="whatsapp.model_whatsapp_whatsapp"/>
        <field name="binding_model_id" ref="whatsapp.model_whatsapp_whatsapp"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.resend_failed()</field>
    </record>
</data>
</odoo>
